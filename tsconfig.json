{
  "compilerOptions": {
    "target": "ES5",
    "declaration": true,
    "module": "commonjs",
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./src/analyzer.ts",
    "./src/app.ts",
    "./src/cli.ts",
    "./src/deps.ts",
    "./src/parser.ts",
    "./src/types.ts"
  ]
}
