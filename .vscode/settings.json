{
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "[feature]": {
    "editor.formatOnSave": true
  },
  "cucumberautocomplete.formatConfOverride": {
    "\"\"\"": 2,
    "And": 1,
    "Background": 0,
    "Given": 1,
    "Scenario": 0,
    "Then": 1,
    "When": 1
  },
  "editor.rulers": [80],
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "prettier.useTabs": false,
  "files.exclude": {
    "lib": true
  }
}
