{
  "include": ["src"],

  "compilerOptions": {
    // Type Checking
    "strict": true,

    // Modules
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@foo/*": ["src/foo/*"]
    },

    // Emit
    // "noEmit": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Language and Environment
    // "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ESNext",

    // Completeness
    "skipLibCheck": true,
    "outDir": "./dist"
  }
}
